if [ "--usage" == "$1" ] ; then
    echo "SFIQ git related commands"
    exit 2
fi
if [ "--help" == "$1" ] ; then
    echo "--lots of complicated"
    echo "--help goes here of more complicated"
    exit 2
fi

pwd | grep Git > /dev/null 2> /dev/null
HAS_GIT=$?
if [ "0" != "$HAS_GIT" ] ; then
	echo "Not in a git directory, bailing out"
	exit 2
fi
